<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/skyblue"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:title="Weather App" />

<androidx.appcompat.widget.SearchView
    android:id="@+id/search"
    android:layout_width="220dp"
    android:layout_height="50dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="5dp"
    app:queryHint="@string/search"
    android:background="@drawable/radial"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/updatebtn"
        android:layout_width="72dp"
        android:layout_height="50dp"
        android:text="Save"
        android:layout_marginRight="10dp"
        tools:layout_editor_absoluteX="334dp"
        tools:layout_editor_absoluteY="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search"
         />

    <ImageView
        android:id="@+id/weatherpic"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/wicon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        tools:layout_editor_absoluteX="105dp" />
    <TextView
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_height="50dp"
        android:text="Temperature : 20 deg Celcius"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weatherpic"
        />
    <TextView
        android:id="@+id/tempIntext"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="50dp"
        android:text="Weather : Clear"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/temp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>